<%= render 'shared/navbar' %>
<div class="article-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div>
    <h1>CONTACTO</h1>
  </div>
</div>
<div class="articles-title">
  <div class="main-wrapper">
    <h2>Comunicate con nosotros</h2>
  </div>
</div>
<div class="contact-wrapper">
  <div class="form-wrapper">
    <div class="form-container">
      <%= simple_form_for @contact do |f| %>
      <h3>Nombre<strong style="color:red; font-size: 16px;">*</strong></h3>
      <div class="form-group">
        <%= f.input :name, input_html: { class: "form-control form-control-lg"}, label: false%>
      </div>
      <h3>Email<strong style="color:red; font-size: 16px;">*</strong></h3>
      <div class="form-group">
        <%= f.input :email, input_html: { class: "form-control form-control-lg"}, label: false, placeholder: "name@example.com" %>
      </div>
      <h3>Mensaje<strong style="color:red; font-size: 16px;">*</strong></h3>
      <div class="form-group">
        <%= f.input :message, :as => :text, input_html: { class: "form-control", id:"exampleFormControlTextarea1", rows:"5" }, label: false %>
      </div>
      <h4>Por favor escriba su mensaje. Un miembro de nuestro equipo le respondera lo m√°s rapido posible.</h4>
      <div class="hidden">
        <%= f.input :nickname %>
      </div>
      <div class="guillo w-100">
        <%= f.submit 'Enviar', class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
  <img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1589229397/Captura_de_Pantalla_2020-05-11_a_la_s_17.35.48.png" alt="">
</div>
<div class="p-5 text-center">
  <%= link_to 'Volver', root_path, class: 'btn-main'  %>
</div>




